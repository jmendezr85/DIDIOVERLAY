<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.didioverlay.app">

  <!-- ✅ No declarar <uses-sdk> aquí. El minSdk viene del csproj (SupportedOSPlatformVersion). -->

  <!-- Android 13+ (Tiramisu) para notificaciones del FGS -->
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

  <!-- Android 14+: tipos de servicios en 1er plano -->
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />

  <!-- Si usas overlay de sistema -->
  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

  <application android:allowBackup="true" android:supportsRtl="true">
    <!-- No repetimos <service>/<activity> aquí: los añade el AOT por los atributos [Service]/[Activity] del código -->
  </application>
</manifest>
