<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DidiOverlay.MainPage"
             Title="DidiOverlay">

  <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="12">

      <Label Text="DidiOverlay — Controles de prueba" FontSize="18" />

      <!-- OCR -->
      <HorizontalStackLayout Spacing="12">
        <Button Text="Permitir captura" Clicked="OnPermitirCaptura"/>
        <Button Text="Forzar OCR ahora" Clicked="OnForzarOcr"/>
      </HorizontalStackLayout>

      <!-- Permisos -->
      <HorizontalStackLayout Spacing="12">
        <Button Text="Permiso Overlay" Clicked="OnOpenOverlayPermission"/>
        <Button Text="Acceso a notificaciones" Clicked="OnOpenNotificationAccess"/>
      </HorizontalStackLayout>

      <!-- Listener de notificaciones -->
      <HorizontalStackLayout Spacing="12">
        <Button Text="Notificación de prueba" Clicked="OnSendTestNotification"/>
        <Button Text="Verificar listener" Clicked="OnCheckListenerEnabled"/>
      </HorizontalStackLayout>

    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
